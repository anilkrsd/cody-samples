<% theChildren = (page.item.parentId == 1) ? page.children : page.parent.children; %>

<% if (theChildren.length > 0) { %>
  <nav id="sideNav">
    <ul class="subNav">
      <% for (var i in theChildren) {
         var subpage = theChildren[i];
         if (subpage.isVisible()) { %>
           <li <%- (page == subpage) ? 'class="active"' : '' %> ><a
               href="/<%= subpage.getURL() %>"><%=subpage.title%></a></li>
          <% } %>
      <% } %>
    </ul>
  </nav>
<% } %>